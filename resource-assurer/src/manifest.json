{
    "manifest_version": 2,
    "name": "Resource Assurer",
    "version": "1.0",
    "description": "Resource Reliability and Integrity Assurance with Blockchain Technology in Web Browsers",
    "icons": {
        "512": "assets/icons/icon512.png",
        "128": "assets/icons/icon128.png",
        "48": "assets/icons/icon48.png",
        "32": "assets/icons/icon32.png",
        "16": "assets/icons/icon16.png"
    },
    "browser_action": {
        "default_icon": {
            "512": "assets/icons/icon512.png",
            "128": "assets/icons/icon128.png",
            "48": "assets/icons/icon48.png",
            "32": "assets/icons/icon32.png",
            "16": "assets/icons/icon16.png"
        },
        "default_popup": "index.html",
        "default_title": "Resource Assurer"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "addon@example.com",
            "strict_min_version": "42.0"
        }
    },
    "background": {
        "scripts": [
            "background.js",
            "runtime.js",
            "vendor.js"
        ],
        "persistent": true
    },
    "permissions": [
        "webRequest",
        "webRequestBlocking",
        "<all_urls>",
        "tabs",
        "storage"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}